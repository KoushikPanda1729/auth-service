{
    "compilerOptions": {
        "module": "node20",
        "target": "ES2022",
        "outDir": "./dist",
        "rootDir": "./src",
        "moduleResolution": "node20",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["ES2022"],
        "types": ["node"]
    },
    "include": ["src/config/**/*", "src/entity/**/*", "src/migration/**/*"]
}
