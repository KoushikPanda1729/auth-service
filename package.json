{
    "name": "auth-service",
    "version": "1.0.0",
    "description": "The user management service ",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "dev": "cross-env NODE_ENV=dev nodemon --exec tsx src/server.ts",
        "build": "esbuild src/server.ts --bundle --platform=node --format=esm --outfile=dist/server.js --external:pg-native --external:express --external:typeorm --external:reflect-metadata --external:bcrypt --external:cookie-parser --external:cors --external:helmet --external:express-jwt --external:express-rate-limit --external:express-validator --external:http-errors --external:jose --external:jsonwebtoken --external:jwks-rsa --external:pg --external:winston --external:dotenv",
        "start": "NODE_ENV=prod node dist/server.js",
        "format:fix": "npx prettier . --write \"src/**/*.ts\"",
        "format:check": "npx prettier . --check \"src/**/*.ts\"",
        "lint:fix": "npx eslint . --fix \"src/**/*.ts\"",
        "lint:check": "npx eslint . \"src/**/*.ts\"",
        "test": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest --watch --runInBand",
        "test:coverage": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest --coverage --runInBand",
        "test:ci": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest --ci --coverage --runInBand",
        "prepare": "husky",
        "migration:generate": "cross-env NODE_ENV=dev tsx ./node_modules/typeorm/cli.js migration:generate -d ./src/config/data-source.ts",
        "migration:run": "cross-env NODE_ENV=dev tsx ./node_modules/typeorm/cli.js migration:run -d ./src/config/data-source.ts",
        "migration:revert": "cross-env NODE_ENV=dev tsx ./node_modules/typeorm/cli.js migration:revert -d ./src/config/data-source.ts",
        "migration:create": "cross-env NODE_ENV=dev tsx ./node_modules/typeorm/cli.js migration:create"
    },
    "keywords": [
        "Auth",
        "service"
    ],
    "author": "Koushik",
    "license": "ISC",
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "@types/bcrypt": "^6.0.0",
        "@types/cookie-parser": "^1.4.10",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.6",
        "@types/http-errors": "^2.0.5",
        "@types/jest": "^30.0.0",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/mocha": "^10.0.10",
        "@types/node": "^24.10.1",
        "@types/supertest": "^6.0.3",
        "@types/winston": "^2.4.4",
        "esbuild": "^0.27.2",
        "eslint": "^9.39.1",
        "husky": "^9.1.7",
        "jest": "^30.2.0",
        "lint-staged": "^16.2.7",
        "mock-jwks": "^1.0.10",
        "nodemon": "^3.1.11",
        "prettier": "3.7.4",
        "ts-jest": "^29.4.6",
        "ts-node": "^10.9.2",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.48.1"
    },
    "lint-staged": {
        "*.ts": [
            "npm run format:fix",
            "npm run lint:fix"
        ]
    },
    "dependencies": {
        "bcrypt": "^6.0.0",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "cross-env": "^10.1.0",
        "dotenv": "^17.2.3",
        "express": "^5.2.1",
        "express-jwt": "^8.5.1",
        "express-rate-limit": "^8.2.1",
        "express-validator": "^7.3.1",
        "helmet": "^8.1.0",
        "http-errors": "^2.0.1",
        "jose": "^6.1.3",
        "jsonwebtoken": "^9.0.3",
        "jwks-rsa": "^3.2.0",
        "pg": "^8.16.3",
        "reflect-metadata": "^0.2.2",
        "supertest": "^7.1.4",
        "typeorm": "^0.3.28",
        "winston": "^3.18.3"
    }
}
